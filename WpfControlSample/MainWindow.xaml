<Window x:Class="WpfControlSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlSample"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:WpfControlSample.ViewModels"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <StackPanel Background="Gray">
        <ToggleButton Style="{StaticResource MyToggleButton}" IsChecked="{Binding IsOn}" Width="100" Height="50"/>
        <ComboBox Style="{StaticResource FlatDropDown}" Background="AliceBlue"  BorderBrush="Aqua">
            <ComboBoxItem Content="Item 1" />
            <ComboBoxItem Content="Item 2" />
            <ComboBoxItem Content="Item 3" />
        </ComboBox>
    </StackPanel>
</Window>
